@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
@section Styles {
    <link href="./css/home.css" rel="stylesheet" />
}

<!-- Hero Section -->
<section class="hero">
    <div class="overlay"></div>
    <div class="hero-content text-center">
        <h1>Welcome to Pet Care 🐾</h1>
        <p>Your trusted partner in pet adoption and care</p>
        <a href="#services" class="btn btn-primary">Get Started</a>
    </div>
</section>

<!-- About Us Section -->
<section id="about" class="about text-center py-5">
    <h2>About Us</h2>
    <p>We are dedicated to connecting pets with loving homes and providing comprehensive care guides to ensure their well-being.</p>
</section>

<!-- Services Section -->
<section id="services" class="services text-center py-5">
    <h2>Our Services</h2>
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card dynamic-card" style="background-image: url('./images/care-guides-bg.jpg');">
                <h3>Care Guides</h3>
                <p>Access expert advice on how to care for your pets.</p>
                <button class="btn btn-success">Learn More</button>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card dynamic-card" style="background-image: url('./images/emergency-help-bg.jpg');">
                <h3>Emergency Help</h3>
                <p>Get immediate assistance for lost or injured pets.</p>
                <button class="btn btn-danger">Get Help</button>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card dynamic-card" style="background-image: url('./images/donate-bg.jpg');">
                <h3>Donation</h3>
                <p>Your contribution helps us provide better care for pets in need.</p>
                <button class="btn btn-warning">Donate Now</button>
            </div>
        </div>
    </div>
</section>
