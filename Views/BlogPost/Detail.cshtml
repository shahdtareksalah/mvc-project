@model mvc_pets.Models.BlogPost

@{
    ViewBag.Title = "Blog Detail";
}

<div class="container py-5">
    <div class="card shadow" style="max-width: 800px; margin: auto;">
        <div class="card-body p-5">
            <h2 class="mb-4">@Model.Title</h2>

            <div class="text-center mb-4">
                <img src="@Model.Image" alt="Blog Picture"
                     class="img-fluid rounded" style="max-height: 400px;" />
            </div>

            <div class="mb-4">
                <p><i class="fas fa-user"></i> <strong>Author:</strong> @Model.User?.FirstName @Model.User?.LastName</p>
                <p><i class="fas fa-calendar-alt"></i> <strong>Published:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
            </div>

            <div class="content">
                <p>@Model.Content</p>
            </div>

            <div class="mt-4">
                <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </div>
</div>