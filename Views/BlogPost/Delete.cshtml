@model mvc_pets.Models.BlogPost
@{
    ViewData["Title"] = "Delete Blog Post";
    Layout = "_Layout";
}
<div class="container mt-4">
    <h2>Delete Blog Post</h2>
    <div class="alert alert-warning">
        <strong>Are you sure you want to delete this blog post?</strong>
    </div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" alt="Blog Image" style="max-width:200px;max-height:150px;" />
            }
            else
            {
                <span>No image uploaded.</span>
            }
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="AdminIndex" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div> 