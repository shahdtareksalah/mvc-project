@model mvc_pets.Models.Pet

@{
    ViewData["Title"] = "Edit Pet";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1>Edit Pet</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="EditPet" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="PetId" />
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="PetName" class="control-label">Pet Name</label>
                    <input asp-for="PetName" class="form-control" />
                    <span asp-validation-for="PetName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Species" class="control-label">Species</label>
                    <input asp-for="Species" class="form-control" />
                    <span asp-validation-for="Species" class="text-danger"></span>
                </div>

               

                <div class="form-group mb-3">
                    <label asp-for="Age" class="control-label">Age</label>
                    <input asp-for="Age" class="form-control" type="number" min="0" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="AdoptionStatus" class="control-label">Adoption Status</label>
                    <select asp-for="AdoptionStatus" class="form-control">
                        <option value="Available">Available</option>
                        <option value="Pending">Pending</option>
                        <option value="Adopted">Adopted</option>
                    </select>
                    <span asp-validation-for="AdoptionStatus" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EmergencyStatus" class="control-label">Emergency Status</label>
                    <select asp-for="EmergencyStatus" class="form-control">
                        <option value="Normal">Normal</option>
                        <option value="Urgent">Urgent</option>
                        <option value="Critical">Critical</option>
                    </select>
                    <span asp-validation-for="EmergencyStatus" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HealthStatus" class="control-label">Health Status</label>
                    <select asp-for="HealthStatus" class="form-control">
                        <option value="Good">Good</option>
                        <option value="Fair">Fair</option>
                        <option value="Poor">Poor</option>
                    </select>
                    <span asp-validation-for="HealthStatus" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Current Image</label>
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="@Model.Image" class="img-thumbnail mb-2" style="max-height: 200px;" />
                    }
                    <input type="file" name="image" class="form-control" accept="image/*" />
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="control-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="ManagePets" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 