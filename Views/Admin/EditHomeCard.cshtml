@model mvc_pets.Models.HomeCard
@{
    ViewData["Title"] = "Edit Home Page Card";
}
<h2>Edit Home Page Card</h2>
<form asp-action="EditHomeCard" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Button Text</label>
        <input asp-for="ButtonText" class="form-control" />
    </div>
    <div class="form-group">
        <label>Button Link</label>
        <input asp-for="ButtonLink" class="form-control" />
    </div>
    <div class="form-group">
        <label>Button Class</label>
        <input asp-for="ButtonClass" class="form-control" placeholder="e.g. btn-success, btn-danger" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    <a href="@Url.Action("HomeCards")" class="btn btn-secondary mt-3">Cancel</a>
</form> 