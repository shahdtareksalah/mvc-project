@model IEnumerable<mvc_pets.Models.HomeCard>
@{
    ViewData["Title"] = "Manage Home Page Cards";
}
<h2>Manage Home Page Cards</h2>
<a class="btn btn-success mb-3" href="@Url.Action("AddHomeCard")">Add New Card</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Button Text</th>
            <th>Button Link</th>
            <th>Button Class</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var card in Model)
        {
            <tr>
                <td>@card.Title</td>
                <td>@card.Description</td>
                <td>@card.ButtonText</td>
                <td>@card.ButtonLink</td>
                <td>@card.ButtonClass</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("EditHomeCard", new { id = card.Id })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("DeleteHomeCard", new { id = card.Id })" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 