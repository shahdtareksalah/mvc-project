@model mvc_pets.Models.Pet

@{
    ViewData["Title"] = "Add New Pet";
}

<div class="container mt-4">
    <h1>Add New Pet</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="AddPet" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        
        <div class="mb-3">
            <label asp-for="PetName" class="form-label">Pet Name</label>
            <input asp-for="PetName" class="form-control" required />
            <span asp-validation-for="PetName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Species" class="form-label">Species</label>
            <input asp-for="Species" class="form-control" required />
            <span asp-validation-for="Species" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Age" class="form-label">Age</label>
            <input asp-for="Age" class="form-control" type="number" required />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Gender" class="form-label">Gender</label>
            <select asp-for="Gender" class="form-control" required>
                <option value="">Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="HealthStatus" class="form-label">Health Status</label>
            <select asp-for="HealthStatus" class="form-control" required>
                <option value="">Select Health Status</option>
                <option value="Good">Good</option>
                <option value="Fair">Fair</option>
                <option value="Poor">Poor</option>
            </select>
            <span asp-validation-for="HealthStatus" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AdoptionStatus" class="form-label">Adoption Status</label>
            <select asp-for="AdoptionStatus" class="form-control" required>
                <option value="">Select Adoption Status</option>
                <option value="Available">Available</option>
                <option value="Pending">Pending</option>
                <option value="Adopted">Adopted</option>
            </select>
            <span asp-validation-for="AdoptionStatus" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Pet Image</label>
            <input type="file" name="image" class="form-control" accept="image/*" required />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Add Pet</button>
            <a asp-action="ManagePets" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 