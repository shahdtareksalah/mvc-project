@{
    // Simulating mobile for testing. You can change this to false to see desktop layout.
    ViewBag.IsMobile = true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>User Profile | Pet Adoption System</title>
    <style>
        body {
            background: linear-gradient(to right, #2c3e50, #3498db);A
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .profile-card {
            display: flex;
            flex-direction: @(ViewBag.IsMobile == true ? "column" : "row");
            background: white;
            width: @(ViewBag.IsMobile == true ? "90%" : "70%");
            max-width: 900px;
            margin: 50px auto;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
        }

        .profile-left, .profile-right {
            padding: 30px;
            color: white;
        }

        .profile-left {
            background-color: #34495e;
            flex: 1;
            text-align: center;
            border-bottom: @(ViewBag.IsMobile == true ? "1px solid #2c3e50" : "none");
            border-right: @(ViewBag.IsMobile == true ? "none" : "1px solid #2c3e50");
        }

        .profile-right {
            background-color: #2c3e50;
            flex: 2;
        }

        .profile-image {
            border-radius: 50%;
            width: 150px;
            height: 150px;
            margin-bottom: 20px;
            object-fit: cover;
        }

        .profile-name {
            font-size: 26px;
            margin-bottom: 10px;
        }

        .profile-role {
            font-size: 18px;
            color: #bdc3c7;
        }

        .profile-section {
            margin-bottom: 20px;
        }

        .section-title {
            font-size: 20px;
            color: #ecf0f1;
            margin-bottom: 10px;
            border-bottom: 2px solid #2980b9;
            padding-bottom: 5px;
        }

        .section-content {
            color: #bdc3c7;
            line-height: 1.6;
        }

        .edit-button {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 20px;
            background-color: #3498db;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .edit-button:hover {
                background-color: #2980b9;
            }

        .logout-button {
            margin-top: 20px;
            display: inline-block;
            padding: 10px 20px;
            background-color: #e74c3c;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .logout-button:hover {
                background-color: #c0392b;
            }
    </style>
</head>
<body>
    <div class="profile-card">
        <div class="profile-left">
            <img src="~/images/profile-pic.jpg" alt="Profile Picture" class="profile-image" />
            <div class="profile-name">John Doe</div>
            <div class="profile-role">Pet Adopter</div>
            <a href="/Account/EditProfile" class="edit-button">Edit Profile</a>
            <br />
            <a href="/Account/Logout" class="logout-button">Logout</a>
        </div>
        <div class="profile-right">
            <div class="profile-section">
                <div class="section-title">Contact Information</div>
                <div class="section-content">
                    Email: john.doe@example.com<br />
                    Phone: +1 234 567 8901
                </div>
            </div>
            <div class="profile-section">
                <div class="section-title">Address</div>
                <div class="section-content">
                    123 Main Street<br />
                    Anytown, USA 12345
                </div>
            </div>
            <div class="profile-section">
                <div class="section-title">Adoption History</div>
                <div class="section-content">
                    <ul>
                        <li>Adopted Bella - Labrador Retriever - Jan 2023</li>
                        <li>Adopted Max - Golden Retriever - May 2022</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

