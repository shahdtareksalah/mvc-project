@model mvc_pets.ViewModels.RegisterViewModel

<h2>Register</h2>

<form asp-action="Register" method="post" enctype="multipart/form-data">
    <div>
        <label>Email:</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label>Phone Number:</label>
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>

    <div>
        <label>First Name:</label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>

    <div>
        <label>Last Name:</label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>

    <div>
        <label>Gender:</label>
        <input asp-for="Gender" />
        <span asp-validation-for="Gender"></span>
    </div>

    <div>
        <label>Address:</label>
        <input asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>

    <div>
        <label>Password:</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label>Confirm Password:</label>
        <input asp-for="ConfirmPassword" type="password" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <div>
        <label>Profile Picture:</label>
        <input asp-for="ProfilePicture" type="file" />
        <span asp-validation-for="ProfilePicture"></span>
    </div>

    <button type="submit">Register</button>
</form>
