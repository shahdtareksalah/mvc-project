@model mvc_pets.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="container py-5">
    <h2 class="text-center mb-5">Welcome Back!</h2>

    <div class="card mx-auto shadow" style="max-width: 600px;">
        <div class="card-body">
            <h4 class="card-title text-center">Login</h4>

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control form-control-sm" id="Email" name="Email" required />
                </div>

                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control form-control-sm" id="Password" name="Password" required />
                </div>

                <button type="submit" class="btn btn-primary btn-sm w-100 mt-3">Login</button>
            </form>

            <div class="mt-3 text-center">
                <p>Don't have an account? <a href="/Account/Register">Register here</a></p>
            </div>
        </div>
    </div>
</div>
