@model mvc_pets.Models.Pet

@{
    ViewData["Title"] = "Request Adoption";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Request to Adopt @Model.PetName</h1>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Image" alt="@Model.PetName" class="img-fluid rounded" />
        </div>
        <div class="col-md-6">
            <h3>Pet Details</h3>
            <dl class="row">
                <dt class="col-sm-4">Pet Name</dt>
                <dd class="col-sm-8">@Model.PetName</dd>

                <dt class="col-sm-4">Species</dt>
                <dd class="col-sm-8">@Model.Species</dd>

                <dt class="col-sm-4">Age</dt>
                <dd class="col-sm-8">@Model.Age</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>
            </dl>

            <form asp-action="Request" asp-route-id="@Model.PetId" method="post">
                <input type="hidden" name="PetId" value="@Model.PetId" />
                <div class="form-group mb-3">
                    <label for="Notes">Why do you want to adopt this pet?</label>
                    <textarea name="Notes" class="form-control" rows="3"></textarea>
                </div>
                <div class="alert alert-info">
                    Are you sure you want to request to adopt @Model.PetName? This will submit an adoption request that will be reviewed by our staff.
                </div>
                <button type="submit" class="btn btn-primary">Submit Adoption Request</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}